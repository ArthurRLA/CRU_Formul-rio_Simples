<h1>Formulário de contato</h1>
<%= form_with model: @contact, local: true do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "erro") %>:</h2>
      <ul>
        <% @contact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div><%= f.label :name, "Nome" %><br><%= f.text_field :name %></div>
  <div><%= f.label :address, "Endereço" %><br><%= f.text_field :address %></div>
  <div><%= f.label :city, "Cidade" %><br><%= f.text_field :city %></div>
  <div><%= f.label :state, "Estado" %><br><%= f.text_field :state %></div>
  <div><%= f.label :phone, "Telefone" %><br><%= f.telephone_field :phone %></div>
  <div><%= f.label :message, "Mensagem" %><br><%= f.text_area :message %></div>

  <div><%= f.submit "Enviar" %></div>
<% end %>